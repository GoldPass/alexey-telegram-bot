{
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm ci --omit=dev --no-audit --no-fund --quiet"
  },
  "deploy": {
    "startCommand": "npm start",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 5,
    "healthcheckPath": "/health",
    "healthcheckTimeout": 300,
    "sleepApplication": false
  }
}
